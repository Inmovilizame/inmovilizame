{# src/Xercode/BackofficeBundle/Resources/views/Default/index.html.twig #}
{% extends 'PhotoblogBundle::front.html.twig' %}

{% block pageheader %}
    <div class = "page-header">
        <h1>Contacta con nosotros <small>Envianos cualquier sugerencia o duda</small></h1>
    </div>
{% endblock %}

{% block content %}
<div class="row">
    <div class="span6">
        <h2>Formulario de contacto</h2>
        <form action="{{ path('in_contact') }}" method="post" {{ form_enctype(form) }} class="form-horizontal"> 
            {{ form_widget(form) }}
            <div class="form-actions">
                <button id="send" class="btn btn-primary" type="submit">Enviar comentario</button>
            </div>
        </form>
    </div>
    
    <div class="span6">
        <h2>Informacion de contacto</h2>
        <p><i class="icon-inbox"></i></i><strong>Email</strong>: <span>{{ info_email_cloacked }}</span></p>
        <p><i class="icon-inbox"></i></i><strong>Email</strong>: <span>{{ info_email_cloacked }}</span></p>
    </div>
</div>

{% endblock %}